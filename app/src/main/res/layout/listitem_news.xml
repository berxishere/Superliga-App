<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_toLeftOf="@id/published_at"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="4dp"
            android:text="TITLE"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/published_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="false"
            android:gravity="right"
            android:paddingTop="3dp"
            android:text="Date"
            android:textColor="#140D0D"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@mipmap/superliga_logo" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:paddingLeft="1dp"
        android:text="Under image description"
        android:textColor="#140D0D"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/contentnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:paddingLeft="1dp"
        android:text="Content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/continue_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:paddingLeft="1dp"
            android:text="Continue to read: " />

        <TextView
            android:id="@+id/link_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:clickable="true"
            android:paddingLeft="2dp"
            android:text="Linklinklink.coom" />
    </LinearLayout>

</LinearLayout>